<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="10.0" style="-fx-background-color: #3050bd;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.resources.org.example.sistemaproyec.Vista.MenuPrincipalVista">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <ImageView fitHeight="200.0" fitWidth="200.0">
        <image>
            <Image url="@../un_lobo_ingeniero-removebg-preview.png" />

        </image>
    </ImageView>

    <Button text="Gestionar Clientes" onAction="#abrirClienteVista"/>

    <Button onAction="#irAVistaProducto" style="-fx-border-color: #000000; -fx-border-width: 2;" text="Empleados">
        <font>
            <Font name="Segoe UI Semibold" size="16.0" />
        </font>
    </Button>

    <Button onAction="#realizarPedido" style="-fx-border-color: #000000; -fx-border-width: 2;" text="Pedidos">
        <font>
            <Font name="Segoe UI Semibold" size="16.0" />
        </font>
    </Button>
</VBox>
