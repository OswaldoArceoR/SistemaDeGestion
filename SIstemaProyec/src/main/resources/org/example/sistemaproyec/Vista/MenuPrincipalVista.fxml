        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <ImageView fitHeight="200.0" fitWidth="200.0">
        <image>
            <Image url="@../un_lobo_ingeniero-removebg-preview.png" />

        </image>
    </ImageView>

    <Button onAction="#irAVistaProducto" style="-fx-border-color: #000000; -fx-border-width: 2;" text="Gestionar Productos">
        <font>
            <Font name="Segoe UI Semibold" size="16.0" />
        </font>
    </Button>

    <Button onAction="#realizarPedido" style="-fx-border-color: #000000; -fx-border-width: 2;" text="Realizar Pedido">
        <font>
            <Font name="Segoe UI Semibold" size="16.0" />
        </font>
    </Button>
</VBox>
