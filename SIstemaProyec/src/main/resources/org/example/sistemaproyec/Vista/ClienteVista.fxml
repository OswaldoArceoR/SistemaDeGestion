<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #3050bd;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.resources.org.example.sistemaproyec.Vista.ClienteVista">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Formulario para agregar cliente -->
    <HBox spacing="10.0">
        <TextField fx:id="nombreTextField" promptText="Nombre" />
        <TextField fx:id="direccionTextField" promptText="Dirección" />
        <TextField fx:id="telefonoTextField" promptText="Teléfono" />
        <TextField fx:id="emailTextField" promptText="Email" />
        <Button onAction="#agregarCliente" text="Agregar Cliente" />
        <Button onAction="#editarCliente" text="Editar Cliente" /> <!-- Nuevo botón -->
    </HBox>



    <!-- Listado de clientes -->
    <Label style="-fx-font-size: 14px;" text="Clientes Registrados" textFill="WHITE" />
    <ListView fx:id="clientesListView" prefHeight="200.0" prefWidth="400.0" />

    <!-- Botón para eliminar cliente -->
    <Button onAction="#eliminarCliente" text="Eliminar Cliente" />
</VBox>
