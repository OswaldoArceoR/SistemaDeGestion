<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.resources.org.example.sistemaproyec.Vista.ClienteVista">
    <padding>
        <Insets top="20.0" bottom="20.0" left="20.0" right="20.0"/>
    </padding>

    <!-- Formulario para agregar cliente -->
    <HBox spacing="10.0">
        <TextField fx:id="nombreTextField" promptText="Nombre"/>
        <TextField fx:id="direccionTextField" promptText="Dirección"/>
        <TextField fx:id="telefonoTextField" promptText="Teléfono"/>
        <TextField fx:id="emailTextField" promptText="Email"/>
        <Button text="Agregar Cliente" onAction="#agregarCliente"/>
    </HBox>

    <!-- Listado de clientes -->
    <Label text="Clientes Registrados" style="-fx-font-size: 14px;"/>
    <ListView fx:id="clientesListView" prefHeight="200.0" prefWidth="400.0"/>

    <!-- Botón para eliminar cliente -->
    <Button text="Eliminar Cliente" onAction="#eliminarCliente"/>
</VBox>

