<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" spacing="10.0" style="-fx-background-color: #3050bd;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.resources.org.example.sistemaproyec.Vista.ProductoVista">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <ImageView fitHeight="80.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="/main/resources/org/example/sistemaproyec/un_lobo_ingeniero.png"/>
        </image>
    </ImageView>

    <!-- ListView para mostrar los productos -->
    <ListView fx:id="productosListView" prefHeight="150.0" prefWidth="400.0"/>

    <TextField fx:id="nombreTextField" promptText="Nombre del Producto" style="-fx-border-color: #C0C0C0; -fx-background-radius: 6; -fx-border-radius: 6;"/>
    <TextField fx:id="descripcionTextField" promptText="DescripciÃ³n" style="-fx-border-color: #C0C0C0; -fx-background-radius: 6; -fx-border-radius: 6;"/>
    <TextField fx:id="precioTextField" promptText="Precio" style="-fx-border-color: #C0C0C0; -fx-background-radius: 6; -fx-border-radius: 6;"/>
    <TextField fx:id="cantidadTextField" promptText="Cantidad Disponible" style="-fx-border-color: #C0C0C0; -fx-background-radius: 6; -fx-border-radius: 6;"/>

    <Button onAction="#agregarProducto" text="Agregar Producto">
        <effect>
            <Glow level="0.0"/>
        </effect>
    </Button>
    <Button onAction="#editarProducto" text="Editar Producto"/>
    <Button onAction="#eliminarProducto" text="Eliminar Producto"/>
</VBox>
