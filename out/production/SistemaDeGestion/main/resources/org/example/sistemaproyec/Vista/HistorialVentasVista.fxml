<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="10" style="-fx-background-color: #3050bd;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.resources.org.example.sistemaproyec.Vista.HistorialVentasVista">
    <Label style="-fx-font-size: 18px;" text="Historial de Ventas" textFill="WHITE">
      <font>
         <Font name="Broadway" size="16.0" />
      </font></Label>
    <TextField fx:id="campoCliente" promptText="Nombre del Cliente" />
    <TableView fx:id="tablaVentas">
        <columns>
            <TableColumn fx:id="colFecha" prefWidth="150.0" text="Fecha" />
            <TableColumn fx:id="colCliente" prefWidth="150.0" text="Cliente" />
            <TableColumn fx:id="colTotal" prefWidth="100.0" text="Total" />
        </columns>
    </TableView>
    <Button alignment="CENTER" onAction="#buscarVentasPorCliente" text="Buscar Ventas por Cliente">
      <font>
         <Font name="Segoe UI Semibold" size="12.0" />
      </font></Button>
</VBox>
